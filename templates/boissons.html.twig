
{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} -  BOISSONS
{% endblock %}

{% block body %}

    {% include 'content.html.twig' %}
{#    {% include 'content.html.twig' with {'sentence': sentence} %}#}

    {% if date is defined %}
        <p>Date du jour : {{ date|date('d/m/Y') }}</p>
    {% endif %}

    {% if boissons|length > 0 %}
        <ul>
            {% for key, boisson in boissons %}
                <p>{{ loop.index }}</p>
                {% if loop.first %}
                    <div style="color: red;">JE SUIS LE PREMIER</div>
                {% endif %}
                <li>
                    <a href="{{ path('boisson_show', {'boisson': boisson}) }}">
                        {{ boisson }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Le bar est vide, on est ferm√©</p>
    {% endif %}

