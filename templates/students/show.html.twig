
{% extends 'base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block title %}
    {{ 'students.head.title'|trans({'%tata%': student.id}) }}
{% endblock %}

{% block body %}

    <h3>
        {{ 'students.show.detailed'|trans }}
    </h3>

    <div class="text-center">
        {% set css = "student-gender-" %}
        <p class="{{ css }}">{{ student.lastName }}</p>
        <p class="{{ css }}">{{ student.firstName }}</p>
        {# on recupere directement le nom de la classe css envoyÃ© par la methode getCssRangeHeight #}
        <p class="{{ student.cssRangeHeight }}">
            {{ student.heightMeter|trans }}
        </p>
        <p class="student-gender-{{ student.gender }}">
            {{ student.genderLabel|trans }}
        </p>
{#        {% include 'students/_partial_gender.html.twig' %}#}
    </div>

    <div class="mt-2">
        <a class="btn btn-info" href="{{ path('index_students') }}">
            {{ 'buttons.label.return'|trans }}
        </a>
    </div>

{% endblock %}