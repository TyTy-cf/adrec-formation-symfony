
{% extends 'base.html.twig' %}

{% block title %}
    Show Students {{ student.id }}
{% endblock %}

{% block body %}

    <h3>
        {{ 'students.show.detailed'|trans }}
    </h3>

    <div class="text-center">
        <p>{{ student.lastName }}</p>
        <p>{{ student.firstName }}</p>
        <p>{{ student.height }}</p>
        <p>{{ student.gender }}</p>
    </div>

    <div class="mt-2">
        <a class="btn btn-info" href="{{ path('index_students') }}">
            {{ 'buttons.label.return'|trans }}
        </a>
    </div>

{% endblock %}