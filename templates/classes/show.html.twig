{% extends 'base.html.twig' %}

{% block title %}Classes{% endblock %}

{% block body %}

    <h1>Classes</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ class.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ class.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ class.label }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ class.level }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a class="btn btn-warning" href="{{ path('classes_edit', {'id': class.id}) }}">edit</a>
        <a class="btn btn-info float-right" href="{{ path('classes_index') }}">back to list</a>
    </div>
    {{ include('classes/_delete_form.html.twig') }}

{% endblock %}
